<!-- Modal -->
<div class="modal fade" id="modal{{@index}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-4">
              <img src="{{chkImage thumbnail}}">
            </div>
            <div class="col-8">
              <h5>{{title}}</h5>
              <hr>
              <div class="my-2">저자: {{authors}}</div>
              <div class="my-2">가격: {{fmtPrice price}}</div>
              <div class="my-2">출판사: {{publisher}}</div>
              <div class="my-2">출판일: {{datetime}}</div>
            </div>
            <div class="my-2">ISBN: {{contents}}</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Understood</button>
        </div>
      </div>
    </div>
  </div>